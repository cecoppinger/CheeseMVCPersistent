@model CheeseMVC.ViewModels.ViewMenuViewModel
@{
    ViewData["Title"] = Model.Menu.Name;
}

<h2>@Model.Menu.Name</h2>

<ul>
    @foreach(var item in Model.Items)
    {
        <li>@item.Cheese.Name</li>
    }
</ul>

<a asp-controller="Menu" asp-action="AddItem" asp-route-id="@Model.Menu.ID">Add New Cheese</a>

